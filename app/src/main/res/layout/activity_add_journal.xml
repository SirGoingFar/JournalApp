<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp"
    android:background="@color/colorLightGray"
    tools:context="com.eemf.sirgoingfar.journalapp.activities.AddJournalActivity">

    <EditText
        android:id="@+id/et_journal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_top_curve"
        android:hint="@string/journal_title"
        android:textSize="@dimen/text_25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"
        android:padding="@dimen/dimen_8dp"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/et_journal_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_edittext_bottom_curve"
        android:hint="@string/journal_content_edittext_hint"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/colorPrimaryText"
        android:padding="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:gravity="top|start"
        android:inputType="textMultiLine|textCapSentences"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:scrollbars="vertical"/>
</LinearLayout>